<html>
  <head>
    <meta charset='UTF-8' />
    <meta http-equiv='X-UA-Compatible' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>家庭記帳本</title>
    <script
      src='https://kit.fontawesome.com/30b73f7bc9.js'
      crossorigin='anonymous'
    ></script>
    <link
      href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css'
      rel='stylesheet'
      integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3'
      crossorigin='anonymous'
    />

  </head>
  <body class='bg-light'>
    <!--Nav bar-->
    <header>
      <nav
        class='navbar navbar-dark bg-dark justify-content-between align-items-center py-2 px-4'
      >
        <div class='container-fluid'>
          {{#if isAuthenticated}}
            <a class='navbar-brand' href='/'>{{user.name}}'s 家庭記帳本</a>
            <form action='/users/logout' class='my-auto' method='POST'>
              <input class='form-control' type='hidden' name='sessionID' />
              <button class='btn btn-outline-primary me-5' type='submit'><i
                  class='fa-solid fa-right-from-bracket me-2'
                ></i>Logout</button>
            </form>
          {{else}}
            <a class='navbar-brand' href='/'>家庭記帳本</a>
            <a class='btn btn-outline-success me-5' href='/users/login'><i
                class='fa-solid fa-right-to-bracket me-2'
              ></i>Login</a>
          {{/if}}
        </div>
      </nav>
    </header>

    <main>
      <div class='container mt-3'>
        {{{body}}}
      </div>
    </main>
    <!-- JavaScript Bundle with Popper -->
    <script
      src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js'
      integrity='sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p'
      crossorigin='anonymous'
    ></script>
  </body>
</html>