<div class='container'>
  <div class='row d-flex justify-content-center'>
    <div class='card col-sm-8'>
      <div class='card-dody'>
        <div class='d-flex justify-content-center'>
          <h2 class='card-title my-3 text-center'>請輸入你的支出</h2>
        </div>
        <small class='mb-5'>*必填欄位</small>

        <form action='/records' method='POST'>
          <div class='row my-5'>
            <label for='name' class='col-sm-3 col-form-label text-end'>名稱<span
              >*</span>:</label>
            <div class='col-sm-9'>
              <input
                type='text'
                class='form-control'
                id='name'
                placeholder='晚餐'
                name='name'
                required
              />
            </div>

          </div>
          <div class='row mb-5'>
            <label for='date' class='col-sm-3 col-form-label text-end'>日期<span
              >*</span>:</label>
            <div class='col-sm-9'>
              <input
                type='date'
                class='form-control'
                id='date'
                name='date'
                required
              />
            </div>
          </div>
          <div class='row mb-5'>
            <label
              for='category'
              class='col-sm-3 col-form-label text-end'
            >種類<span>*</span>:</label>
            <div class='col-sm-9'>
              <select class='form-control' name='CategoryId' id='category'>
                <option elected disabled value=''>選擇類別</option>
                <option value='1'>家居物業</option>
                <option value='2'>交通出行</option>
                <option value='3'>休閒娛樂</option>
                <option value='4'>餐飲食品</option>
                <option value='5'>其他</option>
              </select>
            </div>

          </div>
          <div class='row mb-5'>
            <label
              for='number'
              class='col-sm-3 col-form-label text-end'
            >金額<span>*</span>:</label>
            <div class='col-sm-9'>
              <input
                type='text'
                class='form-control'
                id='number'
                name='number'
                required
              />
            </div>
          </div>

          <div class='text-center'>
            <button class='btn btn-primary' type='submit'>新增支出</button>
          </div>
        </form>
      </div>

    </div>
  </div>

</div>

<div class='form-group mt-3'>

</div>